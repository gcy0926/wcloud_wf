      article#acc
        section#glzl.youxin
          h4.hf 管理员资料
          .ct
            #leftContainer
              #face.xm
                img.face(src='images/face.png')
              #buttonLine
                a#changeFaceHref.cb(href="#")
                button#changeFace 修改头像

            #rightContainer
                #dn.xm
                  a.ra(href='javascript:;') 修改密码
                  p.xsd
                    span.tou 登入名
                    span#adName.xiang
                  .yc
                    form#xmim
                      p
                        label(for='dma') 当前密码
                        input#dma(type='password', name='dma')
                      p
                        label(for='xma') 新密码
                        input#xma(type='password', name='xma')
                      p
                        label(for='qxma') 确认新密码
                        input#qxma(type='password', name='qxma')
                      p.an.txt_center
                        button(type='submit') 保存
                        button.err(type='button') 关闭
                #qx.xm
                  p.xsd
                    span.tou 管理权限
                    span#adminqx.xiang

        section#addgly.youxin
          h4.hf 添加管理员
          .ct
            form#addmanager
                #addglnm.xm
                  .yc(style='display:block;border-top: 0px;')
                    p
                      label(for='xzh') 管理员账号名
                      input#xzh(type='text', name='xzh')
                #addglpw1.xm
                  .yc(style='display:block;border-top: 0px;border:1px solid # ')
                    p
                      label(for='xzhmm1') 账户密码
                      input#xzhmm1(type='password', name='xzhmm1')
                #addglpw2.xm
                  .yc(style='display:block;border-top: 0px;')
                    p
                      label(for='xzhmm2') 确认密码
                      input#xzhmm2(type='password', name='xzhmm2')
                #addglqx.xm
                  .yc(style='display:block;border-top: 0px;')
                    p
                      label(for='xzhqx') 账户权限
                      select#xzhqx(type='text', name='xzhqx')
                button#addglysend.ra(type='submit') 提交
        section#addyh.youxin
          h4.hf 添加用户
              button#exceldap(type='button') 批量导入用户
          .ct
            form#adduser
                #addnm.xm
                  .yc(style='display:block;border-top: 0px;')
                    p
                      label(for='uname') 姓名
                      input#uname(type='text', name='uname')
                #addemail.xm
                  .yc(style='display:block;border-top: 0px;')
                    p
                      label(for='umail') 邮箱
                      input#umail(type='text', name='umail')
                //#addpw1.xm
                //  .yc(style='display:block;border-top: 0px;')
