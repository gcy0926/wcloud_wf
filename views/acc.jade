                #addphone.xm
                  .yc(style='display:block;border-top: 0px;')
                    p
                      label(for='uphone') 手机号码
                      input#uphone(type='text', name='uphone')
                #addzhiw.xm
                  .yc(style='display:block;border-top: 0px;')
                    p
                      label(for='uzhiw') 职位
                      select#uzhiw(type='text', name='uzhiw')
                        option(value='无')无
                        option(value='所长')所长
                        option(value='副所长')副所长
                        option(value='局长')局长
                        option(value='副局长')副局长
                        option(value='主任')主任
                        option(value='副主任')副主任
                        option(value='组长')组长
                        option(value='副组长')副组长
                #addzhic.xm
                  .yc(style='display:block;border-top: 0px;')
                    p
                      label(for='uzhic') 职称
                      select#uzhic(type='text', name='uzhic')
                        option(value='无')无
                        option(value='正高级工程师')正高级工程师
                        option(value='研究员')研究员
                        option(value='副研究员')副研究员
                        option(value='高级工程师')高级工程师
                        option(value='工程师')工程师
                        option(value='助理研究员')助理研究员
                        option(value='助理工程师')助理工程师

                #addou.xm
                  .yc(style='display:block;border-top: 0px;')
                    p
                      label(for='uldapou') 所属部门
                      span#addbm
                        select#uldapou(type='text', name='uldapou')
                button#addumes(type='submit') 提交
